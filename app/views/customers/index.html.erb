<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Customer', new_customer_path, class: "btn btn-success" %>
  </div>
  <div class="col-md-12 mt-3">
    <%= form_tag customers_path, method: "get", class: "form-inline my-2 my-lg-0" do %>
      <%= text_field_tag :name, params[:name], placeholder: "name", class: "form-control mr-sm-2" %>
      <%= button_tag(type: "submit", class: "btn btn-outline-secondary my-2 my-sm-0") do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-12">
    <table class="table table-striped mt-3">
      <thead class="text-white bg-secondary">
        <tr>
          <th>Name</th>
          <th>Phone number</th>
          <th>Address</th>
          <th>Note</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.phone_number %></td>
            <td><%= customer.address %></td>
            <td><%= customer.note %></td>
            <td>
              <%= link_to '<i class="fas fa-info-circle"></i>'.html_safe, customer, data: { toggle: 'tooltip', placement: 'bottom' }, title: t("action_button.permission") %>
              <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_customer_path(customer) %>
              <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, customer, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
        <% if @customers.count < 1 %>
          <tr>
            <td colspan="7" style="text-align: center;">Empty Datas</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>