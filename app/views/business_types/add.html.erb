<div class="row">
    <div class="col-md-8">
        <%= form_with(model: @business_type, local: true) do |form| %>
            <div class="form-group">
                <%= form.label :quantity %>
                <%= form.number_field :add_quantity, step: :any, class: "form-control" %>
            </div>

            <div class="actions">
                <%= form.submit "Add", class: "btn btn-info" %>
                <%= link_to 'Cancel', business_types_path, class: "btn btn-secondary" %>
            </div>
        <% end %>
    </div>
</div>