<table class="show-table mb-3">
  <tr>
    <th>Date:</th>
    <td><%= @sale_list.date.strftime("%d-%m-%Y %I:%M%P") %></td>
  </tr>
  <tr>
    <th>Customer Name:</th>
    <td><%= @sale_list.customer.name %></td>
  </tr>
  <tr>
    <th>Product Names:</th>
    <td><%= business_type_name(@sale_list.id) %></td>
  </tr>
  <tr>
    <th>Totle Price:</th>
    <td><%= business_type_total_price(@sale_list.id) %></td>
  </tr>
  <tr>
    <th>Payment:</th>
    <td><%= @sale_list.first_payment %></td>
  </tr>
  <tr>
    <th>Remain Price:</th>
    <td><%= business_type_total_price(@sale_list.id) - @sale_list.first_payment %></td>
  </tr>
</table>

<div class="row">
    <div class="col-md-8">
        <%= form_with(model: @sale_list, local: true) do |form| %>
            <div class="form-group">
                <%= form.label :payment %>
                <%= form.number_field :add_payment, step: :any, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= form.label :note %>
                <%= form.text_area :note, class: "form-control" %>
            </div>

            <div class="actions">
                <%= form.submit "Add", class: "btn btn-info" %>
                <%= link_to 'Cancel', sale_lists_path, class: "btn btn-secondary" %>
            </div>
        <% end %>
    </div>
</div>