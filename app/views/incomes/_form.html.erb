<%= form_with(model: income, local: true) do |form| %>
  <% if income.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(income.errors.count, "error") %> prohibited this income from being saved:</h2>

      <ul>
        <% income.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <span class="badge badge-danger"><%= t('form_action.required') %></span>
    <%= form.label :date %>
    <%= form.datetime_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <span class="badge badge-danger"><%= t('form_action.required') %></span>
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <span class="badge badge-danger"><%= t('form_action.required') %></span>
    <%= form.label :expense_category_id %>
    <%= form.select(:expense_category_id, ExpenseCategory.where(created_by: current_user.id).collect {|role| [role.name, role.id]}, {:prompt => t('form_action.select')}, { :class => 'form-control' }) %>
  </div>

  <div class="form-group">
    <span class="badge badge-danger"><%= t('form_action.required') %></span>
    <%= form.label :payment_mode_id %>
    <%= form.select(:payment_mode_id, PaymentMode.where(created_by: current_user.id).collect {|role| [role.name, role.id]}, {:prompt => t('form_action.select')}, { :class => 'form-control' }) %>
  </div>

  <div class="form-group">
    <span class="badge badge-danger"><%= t('form_action.required') %></span>
    <%= form.label :note %>
    <%= form.text_area :note, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-info" %>
    <%= link_to 'Cancel', incomes_path, class: "btn btn-secondary" %>
  </div>
<% end %>
