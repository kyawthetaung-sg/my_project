<div class="row">
    <div class="col-md-6">
        <nav>
            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                <% @categories.each do |category| %>
                    <a class="nav-item nav-link <%= @categories.first.id == category.id ? 'active' : '' %>" id="tab<%= category.id %>" data-toggle="tab" href="#nav<%= category.id %>" role="tab" aria-controls="nav<%= category.id %>" aria-selected="false"><%= category.name %></a>
                <% end %>
            </div>
        </nav>
        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <% @categories.each do |category| %>
                <div class="tab-pane fade <%= @categories.first.id == category.id ? 'active show' : '' %>" id="nav<%= category.id %>" role="tabpanel" aria-labelledby="tab<%= category.id %>">
                    <div class="row">
                        <% if business_type_with_category(category).count > 0 %>
                            <% business_type_with_category(category).each do |business_type| %>
                                <% if business_type.quantity - sould_out_quantity(business_type.id) > 0 %>
                                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6" style="margin-top: 5px;">
                                        <button href="#" id="sale" data-id="<%= business_type.id %>" data-name="<%= business_type.name %>" data-remain_quantity="<%= business_type.quantity - sould_out_quantity(business_type.id) %>" data-price="<%= business_type.sale_price %>" class="btn sale btn-outline-info btn-block">
                                            <h4><%= business_type.name %></h4>
                                            <span class="badge badge-success">Qty=<%= business_type.quantity - sould_out_quantity(business_type.id) %></span>
                                            <strong><%= business_type.sale_price %></strong>
                                        </button>
                                    </div>
                                <% end %>
                            <% end %>
                        <% else %>
                            <div class="col-md-12 text-center">
                                <h5 class="text-secondary">Empty Products</h5>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="col-md-6" id="dataTable">

    </div>
</div>

<script>
    $("document").ready(function(){
        localStorage.clear();
        $('.sale').click(function(){
            showTable();

            var id= $(this).data('id');
            var name= $(this).data('name');
            var remain_quantity= $(this).data('remain_quantity');
            var price=$(this).data('price');
            var cart=localStorage.getItem('cart');

            if(!cart){
                var cart = '{"itemList":[]}';
            }
            var cartjson = JSON.parse(cart);
            var list = {"id":id,"name":name,"remain_quantity":remain_quantity,"price":price,"qty":1,"remark":'',"sale_price":0};
            var status=0;

            $.each(cartjson["itemList"],function(i,v){
                if(v){
                    var vid= v.id;
                    if(vid==id){
                        qty=cartjson["itemList"][i].qty;
                        if(remain_quantity > qty){
                            qty++;
                        }else{
                            alert("You can get only "+remain_quantity+" items");
                        }
                        cartjson["itemList"][i].qty=qty;
                        status=1;
                    }
                }
            });

            if(!status){
                cartjson["itemList"].push(list);
            }

            localStorage.setItem('cart',JSON.stringify(cartjson));
            showTable();
        });

        function showTable() {
            var table='<table class="table table-striped"><tr><th>Name</th><th>Qty</th><th>Price</th><th>Amount</th><th>Sale Price</th><th>Remove</th></tr>';

            var cart=localStorage.getItem('cart');
            var subtotal=0;
            var tax=0;
            if (cart) {
                var cart=localStorage.getItem('cart');
                var cartjson=JSON.parse(cart);

                $.each(cartjson["itemList"],function(i,v){
                if (v) {
                    var vid=v.id;
                    var vname=v.name;
                    var vprice=v.price;
                    var vremain_quantity=v.remain_quantity
                    var vqty=v.qty;
                    var total=vprice*vqty;
                    subtotal += total;

                    table += '<tr><td>'+vname+'</td><td><button data-id="'+vid+'" data-remain_quantity="'+vremain_quantity+'" class="btn btn-success plus btn-sm">+</button>['+vqty+']<button data-id="'+vid+'" data-remain_quantity="'+vremain_quantity+'" class="btn btn-danger minusbutton btn-sm">-</button></td><td>'+vprice+'</td><td>'+total+'</td><td><input type="number" class="form-control" style="width: 100px;" name="sale_price" id="sale_price_'+vid+'"></td><td ><button data-id="'+vid+'" class="btn btn-danger removebutton btn-sm">&times</ button></td></tr>';

                }
                });
                    //tax = subtotal*0.05;
                    //var taxtotal=subtotal+tax;

                table +='<tr class="bg-secondary text-white"><td colspan=3>Total</td><td colspan=3>'+subtotal+'</td></tr>';
                //table +='<tr><td colspan=3>tax</td><td>'+tax+'</td></tr>';
                //table +='<tr><td colspan=3>Subtotal</td><td>'+taxtotal+'</td></tr>';
                table +='<tr><td colspan=2 class="text-right">Customer :</td><td colspan=2><select id="customer_id" class="form-control select2"><option>Select a Customer</option><% @customers.each do |customer| %><option value="<%= customer.id %>"><%= customer.name %></option><% end %></select></td><td colspan=2></td></tr>';
                table +='<tr><td colspan=2 class="text-right">Date :</td><td colspan=2><input id="date_time" type="datetime-local" name="date_time" placeholder="Select Date" class="form-control"></td><td colspan=2></td></tr>';
                table +='<tr><td colspan=2 class="text-right">First Payment :</td><td colspan=2><input id="first_payment" type="number" name="first_payment" placeholder="First Payment" class="form-control"></td><td colspan=2></td></tr>';
                table +='<tr><td colspan=2 class="text-right">Note :</td><td colspan=2><textarea id="remark" name="remark" class="form-control" placeholder="Note"></textarea></td><td colspan=2></td></tr>';
                table +='<tr><td colspan=4><button class="btn btn-success btn-block order">Checkout</button></td><td colspan=2></td></tr>';

                table +='</table>';
            }

            $("#dataTable").html(table);
        }

        $('#dataTable').on('click','.plus',function() {
            var id=$(this).data('id');
            var remain_quantity=$(this).data('remain_quantity');
            var cart=localStorage.getItem('cart');
            var cartjson= JSON.parse(cart);

            $.each(cartjson['itemList'],function(i,v) {
                if(v){
                    var vid=v.id;
                    if(vid==id){
                        qty=cartjson['itemList'][i].qty;
                        if(remain_quantity > qty){
                            qty++;
                        }else{
                            alert("You can get only "+remain_quantity+" items");
                        }
                        cartjson['itemList'][i].qty=qty;
                    }
                }
            });
            localStorage.setItem('cart',JSON.stringify(cartjson));
            showTable();
        });

        $('#dataTable').on('click','.minusbutton',function() {
            var id = $(this).data('id');
            var cart=localStorage.getItem('cart');
            var cartjson=JSON.parse(cart);

            $.each(cartjson['itemList'],function(i,v) {
                if(v){
                    var vid = v.id;
                    if(vid==id){
                        qty=cartjson['itemList'][i].qty;
                        if(qty > 1){
                            qty--;
                            cartjson['itemList'][i].qty=qty;
                        }else{
                            cartjson['itemList'][i]=null;
                        }
                    }
                }
            });
            localStorage.setItem('cart',JSON.stringify(cartjson));
            showTable();
        });

        $('#dataTable').on('click','.removebutton',function() {
            var id=$(this).data('id');
            var cart = localStorage.getItem('cart');
            var cartjson = JSON.parse(cart);

            $.each(cartjson['itemList'],function(i, v) {
                if(v){
                    var vid = v.id;
                    if(vid==id){
                        qty=cartjson['itemList'][i].qty;
                        cartjson['itemList'][i]=null;
                    }
                }
            });
            localStorage.setItem('cart',JSON.stringify(cartjson));
            showTable();
        });

        $('#dataTable').on('click','.order',function() {
            var cart =localStorage.getItem('cart');
            var cartjson = JSON.parse(cart);
            var customer_id = $('#customer_id').val();
            var date_time = $('#date_time').val();
            var first_payment = $('#first_payment').val();
            if(first_payment == "") {
                first_payment = 0
            }
            var remark = $('#remark').val();

            $.each(cartjson['itemList'],function(i,v) {
                if(v){
                    var vid= v.id;
                    var sale_price = $('#sale_price_'+vid).val();
                    cartjson['itemList'][i].sale_price=sale_price;
                }
            });

            var param = location.href;
            $.ajax({
                url: param+"/checkout",
                type: "POST",
                data: {"cartjson" : cartjson, "customer_id" : customer_id, "date" : date_time, "first_payment" : first_payment, "note" : remark},
                dataType: "json",
                success: function(data) {
                    if(data.status) {
                        localStorage.clear();
                        $('#dataTable').html('');
                        window.location.reload();
                    }
                    alert(data.message);
                }
            });
        });

    });

    $('.select2').find(':selected');
</script>