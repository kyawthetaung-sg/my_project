<nav class="navbar navbar-index-header">
    <%= form_tag reports_path, method: "get", class: "form-inline" do %>
        <%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "name", selected: params[:category_id]), prompt: t("report.filter.category"), class: "form-control mr-2" %>
        <%= select_tag "business_type_id", options_from_collection_for_select(@business_types, "id", "name", selected: params[:business_type_id]), prompt: t("report.filter.product"), class: "form-control mr-2" %>
        <%= button_tag(type: "submit", class: "btn btn-outline-secondary mr-2 d-none", id: "search-submit") do %>
        <i class="fas fa-search"></i>
        <% end %>
    <% end %>
</nav>

<script>
  $("#category_id").change(function() {
    $("#search-submit").click();
  });

  $("#business_type_id").change(function() {
    $("#search-submit").click();
  });
</script>
