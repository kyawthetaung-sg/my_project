<nav class="navbar navbar-index-header">
  <%= link_to 'New debt capital', new_debt_capital_path, class: "btn btn-info" %>
  <%= form_tag debt_capitals_path, method: "get", class: "form-inline" do %>
    <%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "name", selected: params[:category_id]), prompt: "Select a category", class: "form-control select2" %>
    <div class="input-group ml-md-2">
      <%= text_field_tag :note, params[:note], placeholder: "note", class: "form-control" %>
      <div class="input-group-append">
        <%= button_tag(type: "submit", class: "btn btn-outline-secondary", id: "search-submit") do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</nav>


<script>
  $("#category_id").change(function() {
    $("#search-submit").click();
  });
</script>